{
  "name": "browsersync-webpack-plugin",
  "version": "0.3.1",
  "description": "Combines BrowserSync, webpack-dev-middleware, and webpack-hot-middleware into one ezpz plugin.",
  "main": "index.js",
  "repository": "https://github.com/qwp6t/browsersync-webpack-plugin.git",
  "author": "QWp6t",
  "license": "OSL-3.0",
  "dependencies": {
    "lodash.mergewith": "^4.6.0"
  },
  "peerDependencies": {
    "browser-sync": "^2.18.5"
  },
  "optionalDependencies": {
    "webpack-dev-middleware": "^1.9.0",
    "webpack-hot-middleware": "^2.15.0"
  },
  "devDependencies": {
    "browser-sync": "^2.18.6",
    "buble": "^0.15.2",
    "chai": "^3.5.0",
    "istanbul": "^0.4.5",
    "memory-fs": "^0.4.1",
    "mocha": "^3.2.0",
    "randomstring": "^1.1.5",
    "semistandard": "^9.2.1",
    "webpack": "2.2.0",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-hot-middleware": "^2.15.0"
  },
  "scripts": {
    "prebuild": "npm run lint",
    "build": "npm run build:main && npm run build:util",
    "build:main": "buble src/BrowserSyncWebpackPlugin.js -o index.js",
    "build:util": "buble src/util.js -o util.js",
    "lint": "semistandard src/* test/*",
    "pretest": "npm run build",
    "test": "mocha --colors",
    "test:report": "istanbul cover ./node_modules/mocha/bin/_mocha -- -R spec",
    "test:coverage": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec",
    "prepublish": "npm test"
  }
}
